<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip" 
   >

	<!--  ListRow Left sied Thumbnail image -->
	<LinearLayout android:id="@+id/thumbnail" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="3dip"		
        android:layout_alignParentLeft="true"
        android:background="@drawable/image_bg" 
	    android:layout_marginRight="5dip"
	   >

		<ImageView
		    android:id="@+id/list_image"
		    android:layout_width="60dip"
		    android:layout_height="60dip"
		    android:src="@drawable/rihanna" />
        
	</LinearLayout>
    
	<!-- Title Of Song-->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="How to use photoshop?"
        android:textColor="#040404"
        android:typeface="sans" 
        android:textSize="15dip"
        android:textStyle="bold"/>

	<!-- Artist Name -->
    <TextView
        android:id="@+id/artist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:textColor="#343434"
        android:textSize="10dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="I need to know how to make..." />

	<!-- Rightend Duration -->
    <TextView
        android:id="@+id/duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/title"
        android:gravity="right"
        android:text="5:45"
        android:layout_marginRight="5dip"
        android:textSize="10dip"
        android:textColor="#10bcc9"
        android:textStyle="bold"/>
     
     <TextView
        android:id="@+id/lastModifiedDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/artist"
        android:layout_marginTop="2dip"
        android:paddingLeft="2dp"
        android:text="Last modified date: 10 /3 /2014"
        android:textColor="#cc8400"
        android:textSize="10dip"
        android:typeface="serif" 
       
        android:textStyle="bold"
        android:layout_toRightOf="@+id/thumbnail"/>
     
     
     <LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/lastModifiedDate"
    android:layout_marginRight="14dp"
    android:layout_toLeftOf="@+id/duration"
    android:orientation="horizontal" >
		
     

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_down" />

    <TextView
        android:id="@+id/dislike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="#cc8400"
        android:textSize="10dip"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:src="@drawable/arrow_up" />

    <TextView
        android:id="@+id/like"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="#cc8400"
        android:textSize="10dip"
        android:textStyle="bold" />
</LinearLayout>

<TextView
    android:id="@+id/Owner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/lastModifiedDate"
    android:layout_below="@+id/lastModifiedDate"
    android:paddingBottom="5dip"
    android:paddingLeft="2dp"
    android:text="Owner"
    android:textColor="#cc8400"
    android:textSize="10dip"
    android:textStyle="bold"
    android:typeface="serif" />

</RelativeLayout>
      
     